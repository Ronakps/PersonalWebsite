@model Group5_LonghornAirlines_FinalProject.Models.AppUser

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <h1 class="mb-4">@Model.FirstName @Model.LastName's Profile</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4>User Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Street, @Model.City, @Model.State @Model.Zip</dd>

                <dt class="col-sm-3">Active Status:</dt>
                <dd class="col-sm-9">@Model.ActiveStatus</dd>

                <!-- Conditionally display customer-specific details -->
                @if (ViewBag.IsCustomer)
                {
                    <dt class="col-sm-3">Advantage Number:</dt>
                    <dd class="col-sm-9">@Model.AdvantageNumber</dd>

                    <dt class="col-sm-3">Miles:</dt>
                    <dd class="col-sm-9">@Model.Miles</dd>

                    <dt class="col-sm-3">Age:</dt>
                    <dd class="col-sm-9">@Model.Age</dd>
                }
            </dl>
        </div>
    </div>

    <!-- Tickets Section for Customers -->
    @if (ViewBag.IsCustomer)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h4>Tickets</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ticket ID</th>
                            <th>Flight Number</th>
                            <th>Seat</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td>@ticket.TicketID</td>
                                <td>@ticket.Flight.FlightNumber</td>
                                <td>@ticket.Seat</td>
                                <td>@ticket.Price.ToString("C")</td>
                                <td>@ticket.TicketStatus</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mb-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit Profile</a>
        <a asp-controller="Flights" asp-action="Index" class="btn btn-info me-2">Back to Flights</a>

        <!-- Conditional Link visible only to non-customers -->
        @if (!User.IsInRole("Customer"))
        {
            <a asp-controller="AppUser" asp-action="Index" class="btn btn-secondary">Back to Customer and Employee Lists</a>
        }
    </div>
</div>
