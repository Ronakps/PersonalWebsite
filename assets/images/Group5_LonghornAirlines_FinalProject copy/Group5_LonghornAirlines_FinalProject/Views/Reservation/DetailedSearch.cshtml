@model Group5_LonghornAirlines_FinalProject.Models.ReservationSearchView

@{
    ViewData["Title"] = "DetailedSearch";
}

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<div class="container mt-4">
    <h1 class="mb-4">Detailed Search Reservations</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Enter Reservation Details:</h4>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <form asp-action="DisplaySearchResults" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Price Criteria -->
                        <div class="form-group">
                            <label class="control-label">Price Search Type:</label><br />
                            <input type="radio" asp-for="PriceCriteria" value="GreaterThan" /> Greater Than<br />
                            <input type="radio" asp-for="PriceCriteria" value="LessThan" /> Less Than<br />
                        </div>

                        <!-- Price -->
                        <div class="form-group">
                            <label asp-for="Total" class="control-label">Price</label>
                            <input asp-for="Total" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AdvantageNumber" class="control-label">Advantage Number</label>
                            <input asp-for="AdvantageNumber" type="number" class="form-control" />
                            <span asp-validation-for="AdvantageNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReservationNumber" class="control-label">Reservation Number</label>
                            <input asp-for="ReservationNumber" type="number" class="form-control" />
                            <span asp-validation-for="ReservationNumber" class="text-danger"></span>
                        </div>
                        <!-- Ticket ID -->
                        <div class="form-group">
                            <label asp-for="TicketID" class="control-label">Ticket ID</label>
                            <input asp-for="TicketID" class="form-control" />
                            <span asp-validation-for="TicketID" class="text-danger"></span>
                        </div>

                        <!-- TicketHolder First Name -->
                        <div class="form-group">
                            <label asp-for="TicketholderFN" class="control-label">TicketHolder First Name</label>
                            <input asp-for="TicketholderFN" class="form-control" />
                            <span asp-validation-for="TicketholderFN" class="text-danger"></span>
                        </div>

                        <!-- TicketHolder Last Name -->
                        <div class="form-group">
                            <label asp-for="TicketholderLN" class="control-label">TicketHolder Last Name</label>
                            <input asp-for="TicketholderLN" class="form-control" />
                            <span asp-validation-for="TicketholderLN" class="text-danger"></span>
                        </div>

                        <!-- Date and Time of Flight -->
                        <div class="form-group">
                            <label class="control-label">Date and Time of Flight:</label><br />
                            <input type="radio" asp-for="BeforeAfter" value="Before" /> Before<br />
                            <input type="radio" asp-for="BeforeAfter" value="After" /> After<br />
                            <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DepartureTime" class="text-danger"></span>
                        </div>

                        <!-- Departure City -->
                        <div class="form-group">
                            <label asp-for="DepartureCity" class="control-label">Departure City</label>
                            <select asp-for="DepartureCity" class="form-control">
                                <option value="">-- Select Departure City --</option>
                                @foreach (var city in Enum.GetValues(typeof(City)))
                                {
                                    <option value="@city">@city</option>
                                }
                            </select>
                            <span asp-validation-for="DepartureCity" class="text-danger"></span>
                        </div>

                        <!-- Arrival City -->
                        <div class="form-group">
                            <label asp-for="ArrivalCity" class="control-label">Arrival City</label>
                            <select asp-for="ArrivalCity" class="form-control">
                                <option value="">-- Select Arrival City --</option>
                                @foreach (var city in Enum.GetValues(typeof(City)))
                                {
                                    <option value="@city">@city</option>
                                }
                            </select>
                            <span asp-validation-for="ArrivalCity" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to All Reservations</a>
    </div>
</div>
