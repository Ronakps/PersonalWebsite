@model Group5_LonghornAirlines_FinalProject.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<h2>Add more details to the ticket</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseSeat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(t => t.Reservation.ReservationID)
            @Html.HiddenFor(t => t.TicketHolder.UserName)
            @Html.HiddenFor(t => t.ModificationFee)
            <div class="form-group">
                <label class="control-label">Flight:</label>
                @Html.DropDownList("SelectedFlight", (SelectList)ViewBag.AllFlights, new { @class = "form-control" })
            </div>

            @if (ViewBag.ChosenFlightMessage != "")
            {
                @ViewBag.ChosenFlightMessage
            }

            <div class="form-group">
                <input type="submit" value="Add to Reservation" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
