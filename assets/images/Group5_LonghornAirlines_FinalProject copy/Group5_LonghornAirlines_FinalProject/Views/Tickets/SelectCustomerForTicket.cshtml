@model Group5_LonghornAirlines_FinalProject.Models.Ticket

@{
    ViewData["Title"] = "Select Customer";
}

<h1>Select Customer for Ticket</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectCustomerForTicket" asp-controller="Tickets" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Reservation.ReservationID)
            <div class="form-group">
                <<label class="control-label">Select Customer:</label>
                @Html.DropDownList("SelectedCustomer", (SelectList)@ViewBag.UserNames, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}